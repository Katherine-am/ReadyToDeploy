@model WrapperModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
</head>
<body>
    <div class="row">
        <div class="regbar col-4">
            <h3>Welcome to the Dash</h3>
            <p>Where dreams come to die.</p>
            <div id="logOut">
                <a href="/SignOut" class="logOut">Log Out</a>
            </div>
        </div>
        <div class="col-8">
            <div id="new">
                <a href="/NewHobby" class="view offset-10">Add Hobby</a>
            </div>
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Hobby</th>
                        <th># of Enthusiasts</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach(var hobby in Model.allHobbies)
                        {
                            <tr>
                                <td><a href="@hobby.HobbyID" class="link">@hobby.Name</a></td>
                                <td>@hobby.Enthusiast.Count</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>