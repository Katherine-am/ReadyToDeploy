@model WrapperModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/new.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">
</head>    
<body>
    <div class="container">
        <div class="row">
        <div class="regbar col-lg-8 offset-2">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <a href="/Dashboard" class="btn btn-success">Dashboard</a>
                            <a href="/SignOut" class="btn btn-dark float-right">Log Out</a>
                        </div>
                    </div>

                    <!-- NEW HOBBY FORM -->
                    <div class="card">
                        <div class="card-body">
                            <h3>Add your next hobby!</h3>
                            <form asp-action="CreateHobby" method="POST">
                                <span asp-validation-for="newHobby.Name"></span>
                                <div class="form-group row">
                                    <label asp-for="newHobby.Name" class="col-form-label col-sm-4">Name:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="newHobby.Name">
                                    </div>
                                </div>
                                <span asp-validation-for="newHobby.Description"></span>
                                <div class="form-group row">
                                    <label asp-for="newHobby.Description" class="col-form-label col-sm-4">Description:</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" name="newHobby.Description">
                                    </div>
                                </div>
                                <div class="text-center">
                                    <input type="submit" class="btn btn-block" value="Add Hobby">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
</body>
</html>